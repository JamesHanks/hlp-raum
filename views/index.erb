<article class="homepage">
  <section class="hero">
    <div class="grid-container">
      <div class="row text-row">
        <div class="col-6">
          <h1><%= I18n.t(:description) %></h1>
          <h2><%= I18n.t(:opening_line) %></h2>
        </div>
      </div>
      <div class="row">
        <div class="shift-2 col-8">
          <div class="image">
            <iframe src="https://player.vimeo.com/video/278307963?color=ffd100&title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          </div>
        </div>
      </div>
      <div class="row" align="center">
        <a class="js-scroll-down-button scroll-down-button"><%= I18n.t(:how_it_works) %></a>
      </div>
    </div>
  </section>
  <section id="how-it-works" class="process">
    <div class="grid-container">
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-1.svg">
          </div>
          <h4><%= I18n.t(:pick_an_object) %></h4>
          <p><%= I18n.t(:pick_an_object_text) %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-2.svg">
          </div>
          <h4><%= I18n.t(:say_hello) %></h4>
          <p><%= I18n.t(:say_hello_text) %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="process-item">
          <div class="image-circle">
            <img src="/images/process-3.svg">
          </div>
          <h4><%= I18n.t(:keep_talking) %></h4>
          <p><%= I18n.t(:keep_talking_text) %></p>
        </div>
      </div>
    </div>
  </section>

  <section class="hero message">
    <div class="grid-container">
      <div class="row text-row">
        <div class="col-6">
          <h1>What is Utrecht Talking About?</h1>
        </div>
      </div>
      <div class="conversation-demo">
        <div class="bubble question" id="question-bubble">
          <div class="bubble-inner">
            <h4>Question</h4>
            <div class="text">Insert question here.</div>
          </div>
        </div>
        <div class="bubble answer" id="answer-bubble">
          <div class="bubble-inner">
            <h4>Answer</h4>
            <div class="text">Insert answer here.</div>
          </div>
          <div class="object-ref">Object #???</div>
        </div>
        <div class="buttons">
          <button class="new-question hidden" id="new-question-button">Next Question</button>
          <button class="next-answer hidden" id="next-answer-button">Next Answer</button>
        </div>
      </div>
    </div>
  </section>

  <section id="information" class="information">
    <img src="/images/bg-how-it-works.jpg">
    <div class="right-block"></div>
    <div class="grid-container">
      <div class="col-6 right">
        <h1><%= I18n.t(:information_title) %></h1>
        <p><%= I18n.t(:information_text) %></p>
        <p><%= I18n.t(:infomation_text_2) %></p>
        <a class="link-btn-one js-learn-more">Show More</a>
      </div>
    </div>
  </section>
  <section class="how-to-play">
    <div class="grid-container">
      <div class="col-6">
        <h1><%= I18n.t(:more_information) %></h1>
        <p><%= I18n.t(:more_information_text_1) %></p>
        <p><%= I18n.t(:more_information_text_2) %></p>
        <p><%= I18n.t(:more_information_text_3) %></p>
      </div>
      <div class="col-6 pushed-column">
        <p><%= I18n.t(:more_information_text_4) %></p>
        <p><%= I18n.t(:more_information_text_5) %></p>
      </div>
    </div>
  </section>
  <section id="contact" class="contact">
    <div class="grid-container">
      <div class="col-6">
        <h1><%= I18n.t(:contact_us_title) %></h1>
        <p><%= I18n.t(:contact_us_text_1) %></p>
        <p><%= I18n.t(:contact_us_text_2) %></p>
        <p><%= I18n.t(:contact_us_text_3) %></p>
        <!-- <p><%= I18n.t(:contact_us_text_4) %></p> -->
        <a class="link-btn-one" href="mailto:contact@panstudio.co.uk?Subject=Hello%20Astana%20Enquiry"><%= I18n.t(:contact_us_cta) %></a>
        <div class="logo-container">
          <p>Find us on:</p>
          <a href="https://twitter.com/hellolamppost_" target="_blank"><img src="/images/twitter.svg"></a>
          <a href="https://www.facebook.com/Hello-Lamp-Post-171475660169073/" target="_blank"><img src="/images/facebook.svg"></a>
          <a href="https://instagram.com/hellolamppost_" target="_blank"><img src="/images/instagram.svg"></a>
        </div>
      </div>
      <div class="col-4">
        <div class="swiper-controls">
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        </div>
        <div class="swiper-container">
          <div class="swiper-wrapper">
           <div class="swiper-slide">
            <div class="image-circle"><img src="/images/dinosaur.png"></div>
            <h3><span>Name: </span>Object 1<br><span>Code: </span>#???</h3>
            <p><%= I18n.t(:hello_lampost_brighton) %></p>
          </div>
          <div class="swiper-slide">
            <div class="image-circle"><img src="/images/lamp-post.png"></div>
            <h3><span>Name: </span>Object 2<br><span>Code: </span>#???</h3>
            <p><%= I18n.t(:hello_lampost_austin) %></p>
          </div>
          <div class="swiper-slide">
            <div class="image-circle"><img src="/images/trash-can.png"></div>
            <h3><span>Name: </span>Object 3<br><span>Code: </span>#???</h3>
            <p><%= I18n.t(:hello_lampost_singapore) %></p>
          </div>
          <div class="swiper-slide">
            <div class="image-circle"><img src="/images/lamp-post.png"></div>
            <h3><span>Name: </span>Object 4<br><span>Code: </span>#???</h3>
            <p><%= I18n.t(:hello_lampost_bristol) %></p>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
</section>

